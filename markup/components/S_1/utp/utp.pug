    .utp
        .w-center
            .utp__wrap
                .utp__item
                    .utp__img-wrap.utp__img-first
                        img(src="static/img/content/planet1.png" alt="location")
                    .utp__txt-wrap
                        .utp__txt-title Нам доверяют
